<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <!--    产品图片-->
    <com.hl.lib_miniui.view.imageview.OutCircleLineImageView
        android:id="@+id/fwli_GiftCircleView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:s_gift_outcircle_color="#F0F0F0" />

    <!--    产品名称-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fwli_GiftName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="华为畅享1300万像素智能机..."
        android:textColor="@color/black_little"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fwli_GiftCircleView"
        app:layout_constraintTop_toTopOf="@+id/fwli_GiftCircleView" />

    <!--    价格标题-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fwli_GiftPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="京东价："
        android:textColor="@color/deep_gray"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/fwli_GiftCircleView"
        app:layout_constraintTop_toBottomOf="@+id/fwli_GiftName" />

    <!--    价格-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fwli_GiftPrice_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="￥1000"
        android:textColor="@color/deep_gray"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/fwli_GiftPrice"
        app:layout_constraintTop_toBottomOf="@+id/fwli_GiftName" />

    <!--    数量-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fwli_GiftNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="数量：1"
        android:textColor="@color/deep_gray"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/fwli_GiftCircleView"
        app:layout_constraintTop_toBottomOf="@+id/fwli_GiftPrice" />

    <!--    类型标识-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fwli_GiftType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="步数奖品"
        android:textColor="@color/light_green"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/fwli_GiftCircleView"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>