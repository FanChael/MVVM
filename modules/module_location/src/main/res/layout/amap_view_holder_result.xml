<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avhr_IconStateChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/add_icon_circle"
        app:layout_constraintBottom_toBottomOf="@+id/avhr_subTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/avhr_Title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/avhr_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:text="华融现代城"
        android:textColor="@color/light_green"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/avhr_IconStateChange"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/avhr_subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:text="河北省保定市涿州市开发区 华融现代城底商14号楼104"
        android:textColor="@color/deep_gray"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/avhr_IconStateChange"
        app:layout_constraintTop_toBottomOf="@+id/avhr_Title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/deep_more_gray"
        app:layout_constraintTop_toBottomOf="@+id/avhr_subTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>