<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.activity.LogisticsInfoActivity">

    <View
        android:id="@+id/alit_dotLineTop"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/mini_gray"
        app:layout_constraintBottom_toTopOf="@+id/alit_dot"
        app:layout_constraintEnd_toEndOf="@+id/alit_dot"
        app:layout_constraintStart_toStartOf="@+id/alit_dot"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/alit_dotLineBottom"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/mini_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/alit_dot"
        app:layout_constraintStart_toStartOf="@+id/alit_dot"
        app:layout_constraintTop_toBottomOf="@+id/alit_dot" />

    <View
        android:id="@+id/alit_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/circle_green_dot_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/alit_toWhere" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/alit_toWhere"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:includeFontPadding="false"
        android:text="您的订单正在配送途中（快递员：王xxx，电话：17xxxxxxx1），请您耐心等待。"
        android:textColor="#ff999999"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alit_dot"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/alit_toWhereTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginRight="15dp"
        android:text="2020-05-31 16:49:24"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/alit_toWhere"
        app:layout_constraintTop_toBottomOf="@+id/alit_toWhere" />
</androidx.constraintlayout.widget.ConstraintLayout>